<h2>Giriş</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <div class="form-inputs">
    <%= f.input :tc_no, label: "TC Kimlik No", as: :string, :required => false, :autofocus => true, input_html: { style: "width: 206px" } %>
    <%= f.input :password, label: "Şifre", :required => false %>
    <%= f.input :remember_me, label: "Beni Hatırla", item_wrapper_class: "inline", :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Giriş", id: "sign-in-button"%>
  </div>
<% end %>

<%= render "patients/shared/links" %>
