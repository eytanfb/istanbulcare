<div id = "main-content">
	<div id = "section-box-one"class="well">
		<h3 class = "section-title">Reçeteler</h3>
		<%= render partial: "prescriptions/prescription", collection: prescriptions, as: :prescription %>
  		<div class = "add-patient-record">
  			<%= link_to "Reçete Ekle", new_prescription_path(patient_tc_no: "#{@patient.tc_no}"), class: "btn btn-primary btn-small" if doctor_signed_in? %>
  		</div>
	</div><!--well-->

	<div id = "section-box-one" class="well">
		<h3 class = "section-title">Gorseller</h3>
		<%= render partial: "visuals/visual", collection: visuals, as: :visual %>
  		<div class = "add-patient-record">
