<div id = "main-content">
	<div class="well section-box">
		<h3 class = "section-title">Reçeteler</h3>
		<%= render partial: "prescriptions/prescription", collection: prescriptions, as: :prescription %>
  		<%= link_to "Recete Ekle", new_prescription_path(patient_tc_no: "#{@patient.tc_no}"), class: "btn btn-primary btn-small add-record" if doctor_signed_in? %>
	</div><!--well-->

	<div class="well section-box">
		<h3 class = "section-title">Röntgenler</h3>
		<%= render partial: "visuals/visual", collection: visuals, as: :visual %>
  		<%= link_to "Görsel Ekle", "#", class: "btn btn-primary btn-small add-record" if doctor_signed_in? %>
	</div><!--well-->
</div>

<div class="well section-box">
	<h3 class = "section-title">Asilar</h3>
	<%= render partial: "vaccines/vaccine", collection: vaccines, as: :vaccine %>
  <%= link_to "Asi Ekle", "#", class: "btn btn-primary btn-small add-button" if doctor_signed_in? %>
</div><!--well-->

<div class="well section-box">
	<h3 class = "section-title">Operasyonlar</h3>
	<%= render partial: "operations/operation", collection: operations, as: :operation %>
  <%= link_to "Operasyon Ekle", "#", class: "btn btn-primary btn-small add-button" if doctor_signed_in? %>
</div><!--well-->